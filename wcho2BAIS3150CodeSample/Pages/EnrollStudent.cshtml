@page
@model wcho2BAIS3150CodeSample.Pages.EnrollStudentModel

@{
    ViewData["Title"] = "Enroll Students";
}

@section enrollStudentContentscriptContent
    {
    <script src="~/libraries/jquery/jquery.js"> </script>
    <script src="~/libraries/jquery-validate/jquery.validate.js"></script>
    <script src="~/libraries/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
@section EnrollStudentsContent
    {
    <div class="divHeader">


        <h1>Enroll Student</h1>
        <!-- onsubmit="return isValidate(this);"-->
        <form name="enrollForm" method="post" >
            <div>
                <lable for="_StudentID">Student ID :  </lable>
                <input asp-for="StudentID" name="StudentID" id="_StudentID" value="@Model.StudentID" class="inputText"  />


            </div>
            <div>
                <label for="_FirstName">FirstName: </label>
                <input asp-for="_FirstName"  class="inputText" value="@Model._FirstName" id="_FirstName" />

            </div>
            <div>
                <label for="_LastName">Last Name: </label>
                <input asp-for="LastName" name="LastName" value="@Model.LastName" class="inputText" id="_LastName" />

            </div>
            <div>
                <div>
                    <label for="_Email">Email: </label>
                    <input asp-for="Email" name="Email" value="@Model.Email" class="inputText" id="_Email" />

                  
                </div>

            </div>
            <br />
            <div>
                <label for="_ProgramCode"></label>
                <select asp-for="programCode" id="_ProgramCode" class="selectionProgramCode" style="width:100%;height:30px;">
                    @foreach (var programCodes in Model.programCodes)
                    {

                        <option value="@programCodes"  class="selectionProgramCode">@programCodes</option>
                    }

                </select>
            </div>
            <div>
                <br />
                <input type="submit" name="Submit" value="Submit" class="buttons">
            </div>

            <span asp-validation-for="StudentID" style="color:red"></span><br />
            <span asp-validation-for="_FirstName" style="color:red"></span><br />
            <span asp-validation-for="LastName" style="color:red"></span><br />
            <span asp-validation-for="Email" style="color:red"></span><br />
        </form>



    </div>
    <div>
        <div class="messages">
            <p style="color:red;"> @Model.Message </p>


        </div>

    </div>

}